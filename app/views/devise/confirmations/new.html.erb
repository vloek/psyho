<h2><%= t('simple_form.labels.user.confirmation.resend') %></h2>

<%= simple_form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post, :class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>
  <%= f.full_error :confirmation_token %>
  <%= f.input :email, :required => true, :autofocus => true %>

  <%= f.button :submit, t('simple_form.labels.user.confirmation.send') %>
<% end %>

<%= render "devise/shared/links" %>
