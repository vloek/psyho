<h2><%= t 'shared.labels.registration' %></h2>
<p><%= raw t('simple_form.messages.registration') %></p>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>
    <%= f.input :email, :required => true, :autofocus => true %>
    <%= f.input :password, :required => true %>
    <%= f.input :password_confirmation, :required => true %>
  <% if flash[:alert].present? %>
    <p class="alert alert-danger"><%= flash[:alert] %></p>
  <% end %>
  <div style="margin-left: 180px;"><%= recaptcha_tags %></div>
    <%= f.button :submit, t('shared.links.register') %>
<% end %>

<%= render "devise/shared/links" %>
